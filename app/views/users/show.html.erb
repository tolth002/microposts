<h1>Profile</h1> 

  <h1><%= gravatar_for @user %></h1>
  
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: {class:"form-horizontal"})  do |f| %>

　　　<div calss="form-control">
       <%= f.label :name %>
       <%= @user.name %>
      </div>

     <div calss="form-control">
      <%= f.label :email %>
      <%= @user.email %>
     </div>
     
     <div calss="form-control">
      <%= f.label :region %>
      <%= @user.region %>
     </div>
     
    <div calss="form-control">
      <%= link_to "プロフィールを編集する", edit_user_path, class: "btn btn-primary" %>
     </div>
     
    <% end %>
  </div>
</div>

